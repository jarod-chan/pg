<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	

	<bean id="wxCpConfigStorage" class="me.chanjar.weixin.cp.api.WxCpInMemoryConfigStorage">
		<property name="corpId" value="${weixin.corpid}" />
		<property name="corpSecret" value="${weixin.corpsecret}" />
		<property name="token" value="${weixin.token}" />
		<property name="agentId" value="${weixin.agentid}" />
		<property name="aesKey" value="${weixin.aeskey}" />
	</bean>
	
	<bean id="wxCpService" class="me.chanjar.weixin.cp.api.WxCpServiceImpl">
		<property name="wxCpConfigStorage" ref="wxCpConfigStorage" />
	</bean>
	
	<bean id="wxCpJsapiStorage" class="cn.fyg.pg.infrastructure.weixin.impl.memory.WxCpJsapiStorageImpl" />
	
	<bean id="wxCpJsapiService" class="cn.fyg.pg.infrastructure.weixin.impl.memory.WxCpJsapiServiceImpl">
		<property name="wxCpService" ref="wxCpService"/>
		<property name="wxCpJsapiStorage" ref="wxCpJsapiStorage" />
	</bean>
	
</beans>
